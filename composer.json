{
  "name": "novius/laravel-nova-form-builder",
  "description": "Form builder for Laravel Nova.",
  "keywords": [
    "laravel",
    "nova",
    "form",
    "form-builder"
  ],
  "license": "AGPL-3.0-or-later",
  "require": {
    "php": "^7.4|^8.0",
    "benjaminhirsch/nova-slug-field": "^1.2.6",
    "epartment/nova-dependency-container": "^1.3.2",
    "novius/laravel-form": "~0.1.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^v2.19.0"
  },
  "autoload": {
    "psr-4": {
      "Novius\\LaravelFormBuilder\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Novius\\LaravelFormBuilder\\LaravelFormBuilderServiceProvider"
      ]
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "git@gitlab.novius.net:lara_libs/laravel-form.git"
    }
  ],
  "scripts": {
    "lint": [
      "php-cs-fixer fix --config .php-cs-fixer.php -vv --diff --allow-risky=yes --dry-run"
    ]
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
